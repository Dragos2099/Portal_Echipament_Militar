<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane opacity="0.89" prefHeight="500.0" prefWidth="700.0" style="-fx-background-color: #196673;"
            xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Register.controllers.Register">
    <ImageView fitHeight="500.0" fitWidth="294.0" layoutX="418.0" opacity="0.56" pickOnBounds="true"
               preserveRatio="true">
        <image>
            <Image url="@../images/3.jpg"/>
        </image>
    </ImageView>
    <Text id="title-text" fill="#0f3940" fontSmoothingType="LCD" layoutY="62.0" text="PEM INREGISTRARE"
          textAlignment="CENTER" wrappingWidth="383.60302734375">
        <font>
            <Font name="Copperplate Gothic Bold" size="30.0"/>
        </font>
    </Text>

    <TextField fx:id="usernameField" layoutX="73.0" layoutY="103.0" prefHeight="25.0" prefWidth="237.0"
               promptText="username" style="-fx-background-color: #5c9096;"/>

    <PasswordField fx:id="passwordField" layoutX="73.0" layoutY="150.0" prefHeight="25.0" prefWidth="237.0"
                   promptText="parola" style="-fx-background-color: #5c9096;"/>

    <ChoiceBox fx:id="role" layoutX="73.0" layoutY="200.0" prefHeight="25.0" prefWidth="237.0"
               style="-fx-background-color: #5c9096;">
    </ChoiceBox>

    <Text fx:id="registrationMessage" fill="#0c3136" layoutX="7.0" layoutY="341.0" textAlignment="CENTER"
          wrappingWidth="370.0">
        <font>
            <Font size="20.0"/>
        </font>
    </Text>
    <Button fx:id="back" layoutX="621.0" layoutY="6.0" mnemonicParsing="false" onAction="#back" prefHeight="25.0"
            prefWidth="71.0" style="-fx-background-color: #5c9096;" text="Inapoi" textFill="#0c3439">
        <font>
            <Font size="13.0"/>
        </font>
    </Button>
    <Button layoutX="109.0" layoutY="273.0" onAction="#handleRegisterAction" opacity="0.89" prefHeight="25.0"
            prefWidth="165.0" style="-fx-background-color: #103f47;" text="Inregistrare" textFill="#d7d5c7"/>
</AnchorPane>
